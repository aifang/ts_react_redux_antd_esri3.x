{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "module": "amd",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true

  },
  "include": [
    "src/gis/**/*.ts",
    "src/config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}